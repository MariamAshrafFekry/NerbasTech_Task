@model SongsApp.Models.SongViewModels
@{
    ViewBag.Title = "Home Page";
}
<button type="button" class="btn btn-info btn-lg addSong" data-toggle="modal" data-target="#addSongModal">Add Song</button>
<hr />
<h2>Your Songs</h2>
<div id="addSongModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add new Song</h4>
            </div>
            <div class="modal-body">

                @using (Html.BeginForm("AddSong", "Song", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.SongName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.SongName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.SongName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.SingerName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.SingerName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.SingerName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.AlbumName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.AlbumName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.AlbumName, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="input-group">
                        @Html.LabelFor(m => m.image, new { @class = "col-md-2 control-label" })
                        <label class="input-group-btn">
                            <span class="btn btn-default file-upload">
                                &hellip;@Html.TextBoxFor(m => m.image, new { @Type = "file", @Class = "file-upload" })
                            </span>
                        </label>
                        <input type="text" class="form-control" readonly>
                        @Html.ValidationMessageFor(m => m.image, "", new { @Class = "text-danger" })
                    </div>

                    <div class="input-group">
                        @Html.LabelFor(m => m.NationalID, new { @class = "col-md-2 control-label" })
                        <label class="input-group-btn">
                            <span class="btn btn-default file-upload">
                                &hellip;@Html.TextBoxFor(m => m.NationalID, new { @Type = "file", @Class = "file-upload" })
                            </span>
                        </label>
                        <input type="text" class="form-control" readonly>
                        @Html.ValidationMessageFor(m => m.NationalID, "", new { @Class = "text-danger" })
                    </div>

                    <div class="input-group">
                        @Html.LabelFor(m => m.song, new { @class = "col-md-2 control-label" })
                        <label class="input-group-btn">
                            <span class="btn btn-default file-upload">
                                &hellip;@Html.TextBoxFor(m => m.song, new { @Type = "file", @Class = "file-upload" })
                            </span>
                        </label>
                        <input type="text" class="form-control" readonly>
                        @Html.ValidationMessageFor(m => m.song, "", new { @Class = "text-danger" })
                    </div>
          
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">Add</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
